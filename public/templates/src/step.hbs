<div class="page-header">
	<h1 style="text-align: center;">{{_ 'Choose a character' }}</h1>
</div>

<div id="myCarousel" class="carousel slide">

	<ol class="carousel-indicators">
		{{#items}}
    	<li data-target="#myCarousel" data-slide-to="{{pid}}" class="{{active}}"></li>
    	{{/items}}
    </ol>   

    <!-- Carousel items -->
    <div class="carousel-inner"> 
    	{{#items}}
		<div class="item{{active}} col-lg-12" style="border: 5px solid {{characterColourScheme}};">
			<div class="col-md-2"></div>
			<div class="col-md-2">
				<img src="{{content_pack}}/images/characters/({{identifierCamelCase}})_DefaultPose.png" alt="{{full_name}}" />
			</div>
			<div class="col-md-4">
				<br />
				<div class="row">
	    			<div class="tabbable">
	  					<ul class="nav nav-pills">
	  						<li class="active">
				    			<button type="button" class="btn btn-primary char_select" value="{{pid}}">{{_ 'Select' }}</button>
				    		</li>
			    		</ul>
			    	</div>
			    </div>
			    <br />
			    <div class="row well">
			    <img src="{{content_pack}}/images/characters/({{identifierReference}})_mini.png" />
					<h5 style="color: {{characterColourScheme}};">
						{{full_name}}
					</h5>
					<span class="badge"><b style="color: black;">{{_ 'Occupation' }} : </b>{{occupation}}</span>
				</div>
    		</div>
    		<div class="col-md-2">
    			<h5>{{_ 'About' }}</h5>
    			<p class="mute"><em>{{about}}</em></p>
    			<h5>Stats</h5>
    			<p class="mute"><em>Stats to be updated</em></p>
    		</div>
    		<div class="col-md-2"></div>
    	</div>
		{{/items}}
    </div>

    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
<br />
<div class="row">
	<div class="col-lg-12">
		<div class="btn-group btn-group-justified btn-group-lg">
			<a id="use_picked_char" class="btn btn-success start_session" value="" disabled>{{_ 'Play as selected character' }}</a>
			<a id="use_random_char" class="btn btn-primary start_session">{{_ 'Play as random character' }}</a>
			<a class="btn btn-info disabled">{{_ 'Wait for additional players' }}</a>
			<a class="btn disabled">{{_ 'Invite friends to session' }}</a>
		</div>
	</div>
</div>